<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/buttonUsers"
        android:layout_width="68dp"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:background="#E0B4E8"
        android:text="Users"
        android:textSize="10sp"
        app:icon="@drawable/baseline_groups_2_24"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPrefs" />

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="71dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:background="#E0B4E8"
        android:text="Home"
        android:textSize="10sp"
        app:icon="@drawable/baseline_home_24"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonFollowing"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPrefs"
        android:layout_width="68dp"
        android:layout_height="0dp"
        android:background="#E0B4E8"
        android:text="Prefs"
        android:textSize="10sp"
        app:icon="@drawable/baseline_settings_input_composite_24"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonCreate"
        android:layout_width="68dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:background="#E0B4E8"
        android:text="Create"
        android:textSize="8dp"
        app:icon="@drawable/baseline_note_add_24"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonUsers" />

    <Button
        android:id="@+id/buttonFollowing"
        android:layout_width="68dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="#E0B4E8"
        android:text="Follow"
        android:textSize="8dp"
        app:icon="@drawable/baseline_menu_book_24"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCreate" />

</androidx.constraintlayout.widget.ConstraintLayout>